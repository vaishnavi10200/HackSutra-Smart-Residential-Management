rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function userExists() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    // Users collection - wide open for testing
    match /users/{userId} {
      allow read, write: if isSignedIn();
    }
    
    // Properties - wide open for testing
    match /properties/{propertyId} {
      allow read, write: if isSignedIn();
    }
    
    // Bills - DEBUG VERSION with detailed logging
    match /bills/{billId} {
      // Allow read for authenticated users
      allow read: if isSignedIn();
      
      // Allow create if:
      // 1. User is signed in
      // 2. User document exists
      // 3. landlordId matches auth uid
      allow create: if isSignedIn() && 
                      userExists() &&
                      request.resource.data.landlordId == request.auth.uid;
      
      allow update, delete: if isSignedIn();
    }
    
    // Complaints - wide open for testing
    match /complaints/{complaintId} {
      allow read, write: if isSignedIn();
    }
    
    // Parking - wide open for testing
    match /parkingSlots/{slotId} {
      allow read, write: if isSignedIn();
    }
    
    match /parkingBookings/{bookingId} {
      allow read, write: if isSignedIn();
    }
    
    // Waste management - wide open for testing
    match /settings/{settingId} {
      allow read, write: if isSignedIn();
    }
    
    match /wasteCollections/{collectionId} {
      allow read, write: if isSignedIn();
    }
    
    match /wasteScores/{userId} {
      allow read, write: if isSignedIn();
    }
    
    match /wasteRequests/{requestId} {
      allow read, write: if isSignedIn();
    }
    
    // Fallback
    match /{document=**} {
      allow read, write: if false;
    }
  }
}